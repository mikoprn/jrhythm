---
const allPosts = Object.values(
    import.meta.glob("../pages/posts/*.md", { eager: true }),
);
const tags = [
    ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
];
---

<div class="post__tags">
    {
        tags.map((tag) => (
            <a href={`/tags/${tag}`} class="btn tag">
                {tag}
            </a>
        ))
    }
</div>
